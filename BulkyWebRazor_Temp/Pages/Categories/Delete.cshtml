@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    @*  <inpit asp-for="CategoryId" hidden/> *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled type="number" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn w-100 btn-danger form-control" style="width:150px">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="/categories/index" class="w-100  btn btn-outline-secondary" style="width:150px">Back</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}